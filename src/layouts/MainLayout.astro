---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { socialMediaThemes } from '../utils/colorSchemes';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script is:inline define:vars={{ socialMediaThemes }}>

const randomTheme = socialMediaThemes[Math.floor(Math.random() * socialMediaThemes.length)];

const root = document.documentElement;
root.style.setProperty('--primary', randomTheme.primary);
root.style.setProperty('--secondary', randomTheme.secondary);
root.style.setProperty('--accent', randomTheme.accent);
root.style.setProperty('--background', randomTheme.background);
root.style.setProperty('--text', randomTheme.text);
root.style.setProperty('--primaryHighlightText', randomTheme.primaryHighlightText);
root.style.setProperty('--secondaryHighlightText', randomTheme.secondaryHighlightText);
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} - NoSocialMediaBans</title>
    <style>
      :root {
        color-scheme: light dark;
      }
      body {
        background-color: var(--background);
        color: var(--text);
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="min-h-screen px-4 py-8 md:px-8 lg:px-16">
      <slot />
    </main>
    <Footer />
  </body>
</html> 
