---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { socialMediaThemes } from '../utils/colorSchemes';

const randomTheme = socialMediaThemes[Math.floor(Math.random() * socialMediaThemes.length)];

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} - NoSocialBans</title>
    <style define:vars={{
      primary: randomTheme.primary,
      secondary: randomTheme.secondary,
      accent: randomTheme.accent,
      background: randomTheme.background,
      text: randomTheme.text,
      primaryHighlightText: randomTheme.primaryHighlightText,
      secondaryHighlightText: randomTheme.secondaryHighlightText,
    }}>
      :root {
        color-scheme: light dark;
      }
      body {
        background-color: var(--background);
        color: var(--text);
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="min-h-screen px-4 py-8 md:px-8 lg:px-16">
      <slot />
    </main>
    <Footer />
  </body>
</html> 